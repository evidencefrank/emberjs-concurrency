<button type="button" {{on 'click' (perform this.getNumberTask)}}>
  Get Random Number
</button>
{{#if this.getNumberTask.isRunning}}
  <p>Loading...</p>
{{else}}
  <h3>{{this.getNumberTask.last.value}}</h3>
{{/if}}

<i>{{if this.getNumberTask.last.isError 'Ooops!'}}</i>

<button {{on 'click' this.cancel}}>Cancel</button>